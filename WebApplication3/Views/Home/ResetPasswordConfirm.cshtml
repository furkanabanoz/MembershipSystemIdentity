@model WebApplication3.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}

@if (ViewBag.status=="Success")
{
    <div class="alert alert-info">Sifreniz basariyla yenilenmistir. Giris sayfasindan yeni sifreniz ile giris yapabilirsiniz.</div>
    <a class="btn btn-link" asp-action="Login" asp-controller="Home">Giris icin tiklayiniz</a>
}
else
{
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <h4>Sifre Yenileme Alani</h4>
            <hr />
            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Yeni sifre olustur" class="btn btn-primary" />

                </div>
            
            </form>
        </div>
    </div>
}